<div class="container hero-unit">
    <div class="row center">
      <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">New Game</button>
        <%= link_to "Reset Board", game_reset_path, class: 'btn btn-default btn-lg disabled', id: 'reset_game', remote: true, method: :post %>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3 center">
            <div class="panel panel-info">
                <div class="panel-heading"><p id="status_field"><b>Click on New Game to begin!</b></p></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="left-sidebar" class="col-xs-offset-2 col-xs-2">
            <div class="panel panel-info center">
                <div class="panel-heading">
                    <%= image_tag('x.png', style: "height: 40px; width: 40px") %>
                </div>
                <div class="panel-body">
                    <label>Player Name</label>
                    <p id="player1_name">Player 1</p>
                    <label>Score</label>
                    <p class="score" id="player1_score">0</p>
                </div>
            </div>
        </div>
        <div id="main-content" class="col-xs-4 center">
          <table id="game_table" align="center">
            <% (0..2).each do |row| %>
            <tr>
                <% (0..2).each do |col| %> 
                <td>
                    <%= link_to game_move_path(x: "#{row}", y: "#{col}"), class: "cell", id: "cell_#{row}#{col}", remote: true, method: :post do %>
                    <% end %>
                </td>
                <% end %>
            </tr>
            <% end %>
          </table>
        </div>
        <div id="right-sidebar" class="col-xs-2">
            <div class="panel panel-info center">
                <div class="panel-heading">
                    <%= image_tag('o.png', style: "height: 40px; width: 40px") %>
                </div>
                <div class="panel-body">
                    <label>Player Name</label>
                    <p id="player2_name">Player 2</p>
                    <label>Score</label>
                    <p class="score" id="player2_score">0</p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Enter player names</h4>
    </div>
    <div class="modal-body">
        <%= form_tag(game_new_path, method: "post", remote: true) do %>
        <div class="form-group">
            <%= label_tag(:player1_name, "Player 1 ") %>
            <%= text_field_tag(:player1_name, "", class: "form-control") %>
        </div>
        <div class="form-group">
            <%= label_tag(:player2_name, "Player 2 ") %>
            <%= text_field_tag(:player2_name, "", class: "form-control") %>
        </div>
            <%= submit_tag("Start play", class: "btn btn-default btn-md") %>
        <% end %>
    </div>
  </div>
  
</div>
</div>